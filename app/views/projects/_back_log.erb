<div class="wrap-project-showpage">
  <ul class="list-group">

    <div class="panel-group">
      <h4>Backlog</h4>
      <% if @ordered_in_progress_stories.nil? %>
        <p>Backlog is empty</p>
      <% else %>
        <% @ordered_in_progress_stories.each do |ps| %>

          <div class="panel panel-default">
            <div class="panel-heading">

              <h4 class="panel-title">
                <% if ps.point.present? %>
                  <i class="fab fa-product-hunt"></i>
                  <c><%= ps.point %></c>
                <% end %>
                <%= link_to "#{ps.title}", "##{ps.id}", "data-toggle": "collapse" %>
                <% if ps.accept? && !@project.project_members.find_by(user: current_user).admin_flg? %>
                  <%= link_to "#{ps.workflow}", '#', class: 'btn btn-default pull-right edit-btn', id: 'workflow-btn', disabled: true %>
                <% else %>
                  <%= link_to "#{ps.workflow}", update_workflow_project_story_path(@project, ps), class: "btn btn-default pull-right edit-btn", id: "workflow-btn", method: "patch" %>
                <% end %>

              </h4>

            </div>

            <%= content_tag :div, id: "#{ps.id}", class: "panel-collapse collapse" do -%>
              <ul class="list-group">
                <li class="list-group-item">
                  <%= form_tag project_story_path(@project, ps), method: 'patch' do %>
                    <div class="form-group">
                      <%= label_tag ps.id, 'story title', class: 'edit-label' %>

                      <%= submit_tag '編集確定', class: 'btn btn-primary pull-right edit-btn' %>

                      <%= link_to 'アイスボックスへ', update_status_project_story_path(@project, ps.id), class: 'btn btn-primary to-icebox-btn input-sm pull-right', id: "#{ps.id}_to_icebox", method: 'patch' %>

                      <%= text_field_tag "#{ps.id}[title]", ps.title, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= label_tag ps.id, 'description', class: 'edit-label' %>
                      <%= text_area_tag "#{ps.id}[description]", ps.description, class: 'form-control', rows: '10' %>
                    </div>
                    <div class="form-group">
                      <%= label_tag ps.id, 'importance', class: 'edit-label' %>
                      <%= collection_select "#{ps.id}[importance]", ps.importance, @in_pr_select_importance, :id, :title %>
                    </div>
                    <div class="form-group">
                      <%= label_tag ps.id, 'point(number only)', class: 'edit-label', id: 'point-label' %>
                      <%= text_field_tag "#{ps.id}[point]", ps.point, class: 'input-sm', maxlength: 3 %>
                    </div>
                    <%= submit_tag '編集確定', class: 'btn btn-primary edit-btn btn-block' %>
                  <% end %>
                </li>
              </ul>
            <% end %>

          </div>
        <% end %>

      <% end %>

    </div>

  </ul>

</div>
