<div class="wrap-project-showpage">
  <ul class="list-group">

    <div class="panel-group">
      <h4>Icebox</h4>
      <% if @ordered_iced_stories.nil? %>
        <p>Icebox is empty</p>
      <% else %>
        <% @ordered_iced_stories.each do |os| %>

          <div class="panel panel-default">
            <div class="panel-heading">
              <%= link_to 'バックログへ', update_status_project_story_path(@project, os.id), class: 'btn btn-primary to-backlog-btn input-sm pull-right', id: "#{os.id}_to_backlog", method: 'patch' %>
              <h4 class="panel-title">
                <% if os.point.present? %>
                  <i class="fab fa-product-hunt"></i>
                  <c><%= os.point %></c>
                <% end %>
                <%= link_to "#{os.title}", "##{os.id}", "data-toggle": "collapse" %>
              </h4>

            </div>

            <%= content_tag :div, id: "#{os.id}", class: "panel-collapse collapse" do -%>
              <ul class="list-group">
                <li class="list-group-item">
                  <%= form_tag project_story_path(@project, os), method: 'patch' do %>
                    <div class="form-group">
                      <%= label_tag os.id, 'story title', class: 'edit-label' %>
                      <%= submit_tag '編集確定', class: 'btn btn-primary pull-right edit-btn', id: "#{os.id}_edit_complete" %>
                      <%= text_field_tag "#{os.id}[title]", os.title, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= label_tag os.id, 'description', class: 'edit-label' %>
                      <%= text_area_tag "#{os.id}[description]", os.description, class: 'form-control', rows: '10' %>
                    </div>
                    <div class="form-group">
                      <%= label_tag os.id, 'importance', class: 'edit-label' %>
                      <%= collection_select "#{os.id}[importance]", os.importance, @select_importance, :id, :title %>
                    </div>
                    <div class="form-group">
                      <%= label_tag os.id, 'point(number only)', class: 'edit-label', id: 'point-label' %>
                      <%= text_field_tag "#{os.id}[point]", os.point, class: 'input-sm', maxlength: 3 %>
                    </div>
                    <%= submit_tag '編集確定', class: 'btn btn-primary edit-btn btn-block', id: "#{os.id}_edit_complete_main" %>
                  <% end %>
                </li>
              </ul>
            <% end %>

          </div>
        <% end %>

      <% end %>

    </div>

  </ul>

</div>
